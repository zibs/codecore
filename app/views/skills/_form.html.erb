<section id="<%= dom_id(@skill) %>">
<% if @skill.errors.any? %>
<%= @skill.errors.full_messages.join(", ") %>
<% end %>

<%= form_for [current_user, @skill], remote: true do |f| %>
  <div class = "form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= f.label :level %>
    <%= f.number_field :level, in: 1..10, step: 1, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= f.submit class: "btn btn-primary btn-block" %>
  </div>
<% end %>
</section>
