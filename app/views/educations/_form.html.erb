<div class="container" id="<%= dom_id(@education) %>">

  <% if @education.errors.any? %>
    <%= @education.errors.full_messages.join(", ") %>
  <% end %>

  <%= form_for [current_user, @education], remote: true do |f| %>
    <div>
      <%= f.label :institution %>
      <%= f.text_field :institution %>
    </div>
    <div>
      <%= f.label :program %>
      <%= f.text_field :program %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :start_date %>
      <%= f.date_field :start_date %>
    </div>
    <div>
      <%= f.label :end_date %>
      <%= f.date_field :end_date %>
    </div>
    <div>
      <%= f.label :url %>
      <%= f.url_field :url %>
    </div>
    <div>
      <%= f.submit id:"education_edit_submit" %>
    </div>
  <% end %>
</div>
