  <div id="<%= dom_id(@education) %>">

    <% if @education.errors.any? %>
      <%= @education.errors.full_messages.join(", ") %>
    <% end %>

    <%= form_for [current_user, @education], remote: true do |f| %>
      <div class = "form-group">
        <%= f.label :institution %>
        <%= f.text_field :institution, class: "form-control" %>
      </div>
      <div class = "form-group">
        <%= f.label :program %>
        <%= f.text_field :program, class: "form-control" %>
      </div>
      <div class = "form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class = "form-group">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: "form-control" %>
      </div>
      <div class = "form-group">
        <%= f.label :end_date %>
        <%= f.date_field :end_date, class: "form-control" %>
      </div>
      <div class = "form-group">
        <%= f.label :url %>
        <%= f.url_field :url, class: "form-control" %>
      </div>
      <div>
        <%= f.submit id:"education_edit_submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
