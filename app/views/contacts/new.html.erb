<h1>Contact <%= @user.full_name %></h1>

<div class="row">
  <div class="form-group-lg col-md-6 col-md-offset-3">
    <%= form_for(:contact, url: user_contacts_path(@user)) do |f| %>

      <div class = "form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class = "form-group">

        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      
      <div class = "form-group">
        <%= f.label :message %>
        <%= f.text_area :message, class: "form-control" %>
      </div>

      <div class = "form-group">
        <%= f.submit "Contact", class: "btn btn-primary btn-block" %>
      </div>

    <% end %>
  </div>
</div>
