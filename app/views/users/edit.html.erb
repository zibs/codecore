<h1 class = "text-center">Edit Information</h1>
<section class="col-md-10 col-md-offset-1">
  <%= render "users/nav_edit" %>
</section>
<!-- Tab panes -->
<section class="row">
 <div class="tab-content">
   <div role="tabpanel" class="tab-pane active" id="basic-form">
    <%= render "users/form_basic" %>
   </div>

   <div role="tabpanel" class="tab-pane" id="skills-form">

       <section class="row">
         <section class="col-md-4 col-md-offset-2">
           <ul id = "skills_looper">
           <% @user.skills.each do |skill| %>
             <%= render "skills/skill", skill: skill %>
           <% end %>
          </section>
         <section class="col-md-4">
           <div id="render-skill-form">
             <%= render "skills/form" %>
           </div>
          </section>
       </section>
     </ul>
   </div>

   <div role="tabpanel" class="tab-pane" id="projects-form">
       <section class="row">
         <section class="col-md-5">
           <ul id = "projects_looper">
           <% @user.projects.each do |project| %>
             <%= render "projects/project", project: project %>
           <% end %>
         </section>
        <section class="col-md-5">
           <div id="render-project-form">
             <%= render "projects/form" %>
           </div>
        </section>
      </section>
       </ul>
   </div>

   <div role="tabpanel" class="tab-pane" id="experiences-form">
       <section class="row">
         <section class="col-md-5">
           <ul id = "experiences_looper">
           <% @user.experiences.each do |experience| %>
             <%= render "experiences/experience", experience: experience %>
           <% end %>
       </section>
       <section class="col-md-5">
         <div id="render-experience-form">
           <%= render "experiences/form" %>
         </div>
       </section>
     </ul>
   </div>

   <div role="tabpanel" class="tab-pane" id="educations-form">
     <% if @educations %>
         <div class="row">
          <section class="col-md-5">
            <ul id = "educations_looper">
            <h2>Current Schools</h2>
            <% @educations.each do |education| %>
            <%= render "/educations/listing_education", education: education %>
            <% end %>
          </section>
          <section class="col-md-5">
            <div id="render-education-form">
              <h2>Add Another School</h2>
              <%= render "educations/form" %>
            </div>
          </section>
         </div>
       </ul>
     <% end %>
   </div>

   <div role="tabpanel" class="tab-pane" id="linkings-form">
       <% if @linkings %>
         <div class="row">
           <section class="col-md-4 col-md-offset-2">
             <div class="links">
             <% @linkings.each do |linking| %>
               <%= render 'linkings/linking', linking: linking %>
             <% end %>
           </section>
           <section class="col-md-4">
              <div id="render-links-form">
                <%= render "linkings/form" %>
              </div>
            </section>
          </div>
       <% end %>
     </div>
   </div>

  </div>
</section>
