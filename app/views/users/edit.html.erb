<h1>Basic Information (edit)</h1>

<div class="container">
  <%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :first_name  %>
    <%= f.input :last_name %>
    <%= f.input :description %>
    <%= f.input_field :available, as: :boolean, boolean_style: :inline %>
    <strong>I'm available for work</strong>
    <%= f.input :image, as: :file %>
    <%= f.button :submit %>
  <% end %>
</div>
