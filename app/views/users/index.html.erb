<div class='text-center'>
  <h1><%= @title %></h1>
</div>

<div class="row text-center">
<% @users.each do |user| %>
  <div class="col-lg-4 col-md-6 col-sm-12" style='height: 404px; margin-bottom: 40px;'>
    <div style='height: 350px; postition: relative; bottom: 0px;'>
      <%= image_tag user.image.url :medium %>
    </div>
    <div>
      <h4><%= user.full_name %></h4>
    </div>
    <div>
      <%= user.body_snippet %>
    </div>
    <div>
       <%= link_to "View Profile", user, class: "btn btn-primary btn-profile " %>
    </div>
  </div>
<% end %>
</div>

<div class='text-center'>
  <%= paginate @users, :theme => 'twitter-bootstrap-3' %>
</div>
